<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24303c"
    tools:context=".MainActivity2_Doctor">

    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="175dp"
        android:layout_height="145dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="135dp"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_des1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="44dp"
        android:background="#1ab186"
        android:text="Descripcion"
        app:backgroundTint="#1ab186"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txt_descripcion"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_descripcion2"
        android:layout_width="175dp"
        android:layout_height="145dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="443dp" />

    <Button
        android:id="@+id/btn_des2"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="44dp"
        android:background="#1ab186"
        android:text="Descripcion"
        app:backgroundTint="#1ab186"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txt_descripcion2"
        tools:layout_editor_absoluteY="489dp" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="240dp"
        android:layout_height="43dp"
        android:text="REVISION  DE CITAS"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        app:drawableTint="#FFFFFF"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="135dp" />
</androidx.constraintlayout.widget.ConstraintLayout>